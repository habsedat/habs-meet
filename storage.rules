rules_version = '2';

// Firebase Storage Security Rules
service firebase.storage {
  match /b/{bucket}/o {
    // User uploads - users can only access their own files
    match /userUploads/{userId}/{fileName} {
      // Allow read, write, and delete only if the user is authenticated and owns the file
      allow read, write, delete: if request.auth != null && request.auth.uid == userId;
    }
    
    // Profile pictures - users can only access their own profile pictures
    match /profilePictures/{userId}/{fileName} {
      // Allow read for all authenticated users (to display avatars)
      allow read: if request.auth != null;
      // Allow write and delete only if the user owns the file
      allow write, delete: if request.auth != null && request.auth.uid == userId;
    }
    
    // Default media - available to all authenticated users
    match /defaultMedia/{category}/{fileName} {
      // Allow read, write, and delete for all authenticated users (for admin setup)
      allow read, write, delete: if request.auth != null;
    }
    
    // Catch-all for default media in case of different path structure
    match /defaultMedia/{allPaths=**} {
      // Allow read, write, and delete for all authenticated users
      allow read, write, delete: if request.auth != null;
    }
    
    // Private messages media - only sender and receiver can access
    match /rooms/{roomId}/privateMessages/{senderId}/{receiverId}/{fileName} {
      // Allow read if user is sender or receiver
      allow read: if request.auth != null && 
        (request.auth.uid == senderId || request.auth.uid == receiverId);
      // Allow write only if user is the sender
      allow write: if request.auth != null && request.auth.uid == senderId;
    }
    
    // Default rule - deny all other access
    match /{allPaths=**} {
      allow read, write: if false;
    }
  }
}