{
  "name": "habs-meet",
  "version": "1.0.0",
  "description": "Professional meeting application with LiveKit and Firebase",
  "private": true,
  "workspaces": [
    "apps/*"
  ],
  "scripts": {
    "setup": "node scripts/setup.js",
    "dev": "concurrently \"pnpm --filter web dev\" \"firebase emulators:start\"",
    "build": "pnpm --filter web build",
    "build:dev": "pnpm --filter web build:dev",
    "build:prod": "pnpm --filter web build:prod",
    "deploy:dev": "pnpm --filter web build:dev && firebase use dev && firebase deploy --only \"hosting,functions\" --project habs-meet-dev",
    "deploy:prod": "pnpm --filter web build:prod && firebase use prod && firebase deploy --only \"hosting,functions\" --project habs-meet-prod",
    "deploy": "node scripts/deploy.js",
    "seed": "node scripts/seed.js",
    "lint": "eslint . --ext .ts,.tsx,.js,.jsx",
    "lint:fix": "eslint . --ext .ts,.tsx,.js,.jsx --fix",
    "format": "prettier --write .",
    "type-check": "tsc --noEmit"
  },
  "devDependencies": {
    "@typescript-eslint/eslint-plugin": "^6.0.0",
    "@typescript-eslint/parser": "^6.0.0",
    "concurrently": "^8.2.0",
    "eslint": "^8.45.0",
    "eslint-config-prettier": "^9.0.0",
    "eslint-plugin-prettier": "^5.0.0",
    "prettier": "^3.0.0",
    "typescript": "^5.1.0"
  },
  "engines": {
    "node": ">=18.0.0",
    "pnpm": ">=8.0.0"
  }
}
